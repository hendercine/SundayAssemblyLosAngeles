<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grass_dark</item>
        <item name="colorPrimaryDark">@color/peacock_dark</item>
        <item name="colorAccent">@color/banana_medium</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.SideBar">
        <item name="android:textAppearanceListItem">@style/TextAppearance.AppCompat.Menu</item>
    </style>

</resources>
