<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary" tools:override="true">@color/colorPrimary</item>
        <item name="colorPrimaryDark" tools:override="true">@color/colorPrimaryDark</item>
        <item name="colorAccent" tools:override="true">@color/colorAccent</item>
        <item name="primaryTextColor" tools:override="true">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.SideBar">
        <item name="android:textAppearanceListItem">@style/TextAppearance.AppCompat.Menu</item>
    </style>

</resources>
